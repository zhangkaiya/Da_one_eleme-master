<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10sp"
        android:id="@+id/order_item_iv_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a" />

        <TextView
            android:layout_marginTop="8sp"
            android:id="@+id/order_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饿啦吗程序员外卖项目"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/order_item_iv_pic"
            android:layout_toEndOf="@+id/order_item_iv_pic" />


        <TextView
            android:layout_marginTop="6sp"
            android:id="@+id/order_item_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/order_item_tv_name"
            android:text="已送达"
            android:textColor="#000" />

    <TextView
        android:id="@+id/order_item_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020-10-10 10:10:10"
        android:layout_below="@+id/order_item_tv_name"
        android:layout_toRightOf="@+id/order_item_iv_pic"
        android:layout_toEndOf="@+id/order_item_iv_pic" />
    </RelativeLayout>
<View
    android:layout_marginTop="15sp"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="#D8E0E5"/>
    <RelativeLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红烧肉等3件商品"
            android:textColor="#000"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 31.0"
            android:textColor="#000"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#D8E0E5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_kuang"
            android:text="再来一单"
            android:textColor="#6AAFED" />
    </RelativeLayout>

</LinearLayout>