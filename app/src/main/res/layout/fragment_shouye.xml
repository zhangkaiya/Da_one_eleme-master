<com.jiyun.da_one_eleme.modle.solveCaton.MyScrollview xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiyun.da_one_eleme.controller.Fragment.Homepage_Fragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#B7D7F4"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="昌平区马池口北小营"
            android:id="@+id/textView3"
            android:layout_alignBaseline="@+id/editText"
            android:layout_alignBottom="@+id/editText"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_address_drop_down"
            android:id="@+id/imageView"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toLeftOf="@+id/editText"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />
        <EditText
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/magnifying_glass"
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入商家 商品名称"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
   <com.youth.banner.Banner
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/banner">
       
   </com.youth.banner.Banner>
    <GridView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:numColumns="4"
        android:id="@+id/grid_view"></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_shop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="附近商家"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
</com.jiyun.da_one_eleme.modle.solveCaton.MyScrollview>
